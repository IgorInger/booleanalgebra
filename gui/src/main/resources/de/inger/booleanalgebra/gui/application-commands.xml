<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="windowCommandManager"
		class="org.springframework.richclient.application.support.ApplicationWindowCommandManager"></bean>

	<bean id="toolbar"
		class="org.springframework.richclient.command.CommandGroupFactoryBean">
		<property name="members">
			<list>
				<ref bean="newFileCommand" />
				<ref bean="openFileCommand" />
				<ref bean="saveFileCommand" />
				<value>separator</value>
				<ref bean="executeCommand" />
			</list>
		</property>
	</bean>

	<!-- Menu -->

	<bean id="menubar"
		class="org.springframework.richclient.command.CommandGroupFactoryBean">
		<property name="members">
			<list>
				<ref bean="fileMenu" />
				<ref bean="editMenu" />
				<ref bean="windowMenu" />
				<ref bean="helpMenu" />
			</list>
		</property>
	</bean>

	<bean id="fileMenu"
		class="org.springframework.richclient.command.CommandGroupFactoryBean">
		<property name="members">
			<list>
				<ref bean="newFileCommand" />
				<ref bean="openFileCommand" />
				<ref bean="saveFileCommand" />
				<value>separator</value>
				<ref bean="exitCommand" />
			</list>
		</property>
	</bean>

	<bean id="editMenu"
		class="org.springframework.richclient.command.CommandGroupFactoryBean">
		<property name="members">
			<list>
			</list>
		</property>
	</bean>


	<bean id="windowMenu"
		class="org.springframework.richclient.command.CommandGroupFactoryBean">
		<property name="members">
			<list>
				<ref bean="newWindowCommand" />
				<value>separator</value>
				<ref bean="showViewMenu" />

			</list>
		</property>
	</bean>

	<bean id="helpMenu"
		class="org.springframework.richclient.command.CommandGroupFactoryBean">
		<property name="members">
			<list>
				<ref bean="aboutCommand" />
			</list>
		</property>
	</bean>

	<bean id="showViewMenu"
		class="org.springframework.richclient.command.support.ShowViewMenu" />

	<!-- Commands -->

	<bean id="newFileCommand" class="de.inger.booleanalgebra.gui.commands.NewFileCommand"></bean>
	<bean id="saveFileCommand" class="de.inger.booleanalgebra.gui.commands.SaveFileCommand"></bean>
	<bean id="openFileCommand" class="de.inger.booleanalgebra.gui.commands.OpenFileCommand"></bean>
	<bean id="exitCommand"
		class="org.springframework.richclient.command.support.ExitCommand"></bean>
	<bean id="aboutCommand"
		class="org.springframework.richclient.command.support.AboutCommand"></bean>
	<bean id="executeCommand" class="de.inger.booleanalgebra.gui.commands.ExecuteCommand"></bean>
	<bean id="newWindowCommand"
		class="org.springframework.richclient.command.support.NewWindowCommand"></bean>



</beans>